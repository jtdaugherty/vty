test-suite verify-config
  default-language:    Haskell2010
  type:                exitcode-stdio-1.0
  hs-source-dirs:      programs
  main-is:             VerifyConfig.hs
  ghc-options:         -threaded -Wall
  build-depends:       base >= 4.8 && < 5,
                       vty,
                       vty-tests,
                       HUnit,
                       test-framework == 0.8.*,
                       test-framework-hunit,
                       bytestring,
                       string-qq
